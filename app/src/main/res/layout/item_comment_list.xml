<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/comment_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0099cc"
        android:maxWidth="150dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/common_margin"
        android:text="4/13" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_tip"
        />

    <FrameLayout
        android:id="@+id/comment_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_content"
        android:layout_marginBottom="10dp">

        <cn.demo.wr.project.commentswiplistviewdemo.widget.MyListView
            android:id="@+id/comment_reply_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </cn.demo.wr.project.commentswiplistviewdemo.widget.MyListView>


    </FrameLayout>

    <TextView
        android:id="@+id/comment_give_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_reply_layout"
        android:text="送鲜花"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/common_margin"
        android:textColor="#ffff4444"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/comment_give_flower"
        android:background="#C0C0C0"
        />

</RelativeLayout>